<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/progress"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_below="@+id/goal_limit"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/goal_progress"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/goal_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/goal_category"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="Monthly limit: "
            android:textSize="15sp" />

        <TextView
            android:id="@+id/goal_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/goal_limit"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="Progress: "
            android:textSize="15sp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="200dp"
            android:layout_toRightOf="@+id/goal_limit"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/goal_category"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/goal_limit"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/goal_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="Name: "
            android:textSize="15sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>