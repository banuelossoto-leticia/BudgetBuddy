<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="180dp"
    android:background="@drawable/create_new_category_popup_background">

    <ImageButton
        android:id="@+id/submit_button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="179dp"
        android:layout_marginTop="101dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="30dp"
        android:background="#0000"
        android:scaleType="center"
        android:src="@drawable/submit_button" />

    <TextView
        android:id="@+id/categoryNameTextView"
        android:layout_width="130dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="146dp"
        android:layout_marginBottom="91dp"
        android:fontFamily="monospace"
        android:text="Category Name:"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/newCategoryNameEditText"
        android:layout_width="121dp"
        android:layout_height="21dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="163dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="103dp"
        android:background="@drawable/text_field_background"
        android:hint="name here"
        android:textAlignment="viewStart"
        android:textColor="#8D8D8D"
        android:textColorHint="#8D8D8D"
        android:textSize="15sp" />

    <ImageButton
        android:id="@+id/back_button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="62dp"
        android:layout_marginTop="102dp"
        android:layout_marginEnd="181dp"
        android:layout_marginBottom="30dp"
        android:background="#0000"
        android:src="@drawable/back_button" />

    <TextView
        android:id="@+id/errorTextView"
        android:layout_width="219dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="128dp"
        android:fontFamily="monospace"
        android:text="*There Already Exists A Category With That Name."
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#A14646"
        android:textSize="10sp"
        android:visibility="invisible" />

</RelativeLayout>